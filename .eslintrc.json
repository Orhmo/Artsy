{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true 
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "next",
      "next/core-web-vitals",
      "prettier"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "@next/next/no-page-custom-font": "off",
      "camelcase": "error",
      "spaced-comment": "error",
      "quotes": ["error", "single"],
      "no-duplicate-imports": "error"
    },
    "settings": {
      "import/resolver": {
       "typescript": {}
        },
       "next": {
        "rootDir": "packages/artsy/"
        }
      }
    
}
